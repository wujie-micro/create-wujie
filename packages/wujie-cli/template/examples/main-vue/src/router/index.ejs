import Vue from "vue";
import VueRouter from 'vue-router'
import Home from "../views/Home.vue";
import Multiple from "../views/Multiple.vue";
<% if (subFramework.includes('Vue2')) { -%>
import Vue2 from "../views/Vue2.vue";
import Vue2Sub from "../views/Vue2-sub.vue";
<% } -%>
<% if (subFramework.includes('Vue3')) { -%>
import Vue3 from "../views/Vue3.vue";
import Vue3Sub from "../views/Vue3-sub.vue";
<% } -%>
<% if (subFramework.includes('Vite')) { -%>
import Vite from "../views/Vite.vue";
import ViteSub from "../views/Vite-sub.vue";
<% } -%>
<% if (subFramework.includes('React16')) { -%>
import React16 from "../views/React16.vue";
import React16Sub from "../views/React16-sub.vue";
<% } -%>
<% if (subFramework.includes('React17')) { -%>
import React17 from "../views/React17.vue";
import React17Sub from "../views/React17-sub.vue";
<% } -%>
<% if (subFramework.includes('Angular12')) { -%>
import Angular12 from "../views/Angular12.vue";
<% } -%>

const basename = process.env.NODE_ENV === "production" ? "/demo-main-vue/" : "";
Vue.use(VueRouter);

const routes = [
  {
    path: "/all",
    name: "all",
    component: Multiple,
  },
  {
    path: "/",
    redirect: "/home",
  },
  {
    path: "/home",
    name: "home",
    component: Home,
  },
  <% if (subFramework.includes('Vue2')) { -%>
    {
      path: "/vue2",
      name: "vue2",
      component: Vue2,
    },
    {
      path: "/vue2-sub/:path",
      name: "vue2-sub",
      component: Vue2Sub,
    },
    <% } -%>
    <% if (subFramework.includes('Vue3')) { -%>
    {
      path: "/vue3",
      name: "vue3",
      component: Vue3,
    },
    {
      path: "/vue3-sub/:path",
      name: "vue3-sub",
      component: Vue3Sub,
    },
    <% } -%>
    <% if (subFramework.includes('Vite')) { -%>
    {
      path: "/vite",
      name: "vite",
      component: Vite,
    },
    {
      path: "/vite-sub/:path",
      name: "vite-sub",
      component: ViteSub,
    },
    <% } -%>
    <% if (subFramework.includes('React16')) { -%>
      {
        path: "/react16",
        name: "react16",
        component: React16,
      },
      {
        path: "/react16-sub/:path",
        name: "react16-sub",
        component: React16Sub,
      },
    <% } -%>
    <% if (subFramework.includes('React17')) { -%>
      {
        path: "/react17",
        name: "react17",
        component: React17,
      },
      {
        path: "/react17-sub/:path",
        name: "react17-sub",
        component: React17Sub,
      },
    <% } -%>
    <% if (subFramework.includes('Angular12')) { -%>
      {
        path: "/angular12",
        name: "angular12",
        component: Angular12,
      },
    <% } -%>
];

// 3. 创建路由实例并传递 `routes` 配置
// 你可以在这里输入更多的配置，但我们在这里
// 暂时保持简单
const router = new VueRouter({
  <% if (mainRouter === 'hash') { -%>
    mode: 'hash',
  <% } -%>
  <% if (mainRouter === 'history') { -%>
    mode: 'history',
  <% } -%>
  base: basename,
  routes,
});

export default router;


